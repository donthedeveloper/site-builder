{
  "name": "site-builder",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "dev-mac": "npm install && npm run sass && npm run watch-mac",
    "dev-windows": "npm install && npm run sass && npm run watch-windows",
    "sass": "node-sass --recursive browser/src/sass --output browser/public/css",
    "sass-watch": "node-sass --watch --recursive browser/src/sass --output browser/public/css",
    "start": "node server.js",
    "start-dev": "nodemon server.js --ignore ./browser/src --ignore ./browser/public",
    "test": "NODE_ENV=test jest --config ./server/jest.config.js",
    "watch-mac": "npm run sass-watch & npm run webpack-watch & npm run start-dev",
    "watch-windows": "start /B npm run sass-watch & start /B npm run webpack-watch & start /B npm run start-dev",
    "webpack": "webpack",
    "webpack-watch": "webpack -w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/donthedeveloper/site-builder.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/donthedeveloper/site-builder/issues"
  },
  "homepage": "https://github.com/donthedeveloper/site-builder#readme",
  "dependencies": {
    "axios": "^0.18.0",
    "bcrypt": "^3.0.2",
    "body-parser": "^1.18.3",
    "chalk": "^2.4.1",
    "connect-mongo": "^2.0.2",
    "dotenv": "^6.1.0",
    "express": "^4.16.4",
    "express-session": "^1.15.6",
    "mongoose": "^5.3.13",
    "mongoose-unique-validator": "^2.0.2",
    "mongoose-validator": "^2.1.0",
    "morgan": "^1.9.1",
    "nunjucks": "^3.1.4",
    "prop-types": "^15.6.2",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-redux": "^5.1.1",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.1.6",
    "@babel/polyfill": "^7.0.0",
